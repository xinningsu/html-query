    "keywords": [
        "html query",
        "jquery",
        "php jquery",
        "php html query",
        "jquery-like",
        "html processor",
        "html dom",
        "css selector"
    ],
    "homepage": "https://github.com/xinningsu/html-query",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Su",
            "email": "deng5765@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "symfony/css-selector": "^2.8 || ^3.0 || ^4.0 || ^5.0 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5 || ^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "squizlabs/php_codesniffer": "^3.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Sulao\\HtmlQuery\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    }
